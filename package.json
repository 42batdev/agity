{
  "name": "agity",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn turbo run build",
    "build:home": "yarn turbo run build --scope=home",
    "build:app": "yarn turbo run build --scope=app",
    "dev": "yarn turbo run dev --parallel",
    "lint": "yarn turbo run lint",
    "prettier": "prettier --write '**/*.{ts,tsx,.md}'"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
